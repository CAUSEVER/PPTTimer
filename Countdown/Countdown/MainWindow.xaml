<Window x:Class="Countdown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Countdown" xmlns:Close="clr-namespace:Countdown.controls.Close" xmlns:My="clr-namespace:Countdown.controls.My"
        mc:Ignorable="d"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="CountDown" Height="110" Width="235"
        Opacity="0.8">
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="WindowStyle" Value="None"/>
            <Setter Property="AllowsTransparency" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Style>
    <Grid x:Name="MyGrid" Margin="0" ClipToBounds="True">
        <Close:CloseButton x:Name="close" Width="50" Height="50" Panel.ZIndex="2" Visibility="Hidden" Cursor="Hand" MouseLeftButtonDown="close_MouseLeftButtonDown"
                           FrontImage="/pic/closeMouseover.png"
                           BehindImage="/pic/close.png"/>
        <Path Fill="White" Name="ExitPath" Opacity="1" Panel.ZIndex="1" MouseLeftButtonDown="ExitPath_MouseLeftButtonDown">
            <Path.Data>
                <EllipseGeometry x:Name="ExitEllipse" RadiusX="0" RadiusY="{Binding RelativeSource={RelativeSource Mode=Self},Path=RadiusX}">
                </EllipseGeometry>
            </Path.Data>
        </Path>

        <TextBox x:Name="mintime" Width="35" Height="21" Text="123" Panel.ZIndex="1" FontSize="16" HorizontalAlignment="Center" Margin="-50,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden"/>
        <TextBox x:Name="sectime" Width="35" Height="21" Text="456" Panel.ZIndex="1" FontSize="16" HorizontalAlignment="Center" Margin="50,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden"/>

        <TextBlock x:Name="tipText"
               Opacity="0" Visibility="Hidden"
        HorizontalAlignment="Center" VerticalAlignment="Center"
                          
               Width="190" Height="18" Panel.ZIndex="1">
        </TextBlock>

        <Border x:Name="baseplate" CornerRadius="10" Margin="6">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,0.1">
                    <GradientStop Color="#FFEAF4FF" Offset="0"/>
                    <GradientStop Color="#FFF4F8F9" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <!--设置背景色-->
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#AAAAAA"/>
            </Border.Effect>

            <Grid ShowGridLines="False">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--底层内容-->

                <Grid Grid.Row="0">
                    <TextBlock x:Name="myline"
Text="YteamPPTTimer" VerticalAlignment="Center" HorizontalAlignment="Left" Height="16"
Width="auto" Margin="4,0,0,0"/>
                </Grid>

                <StackPanel Grid.Row="0" Orientation="Horizontal" FlowDirection="RightToLeft">
                    <Close:CloseButton x:Name="exit" Margin="0"
                                 Height="28" Width="28"
                                 Cursor="Hand" BorderBrush="{x:Null}"
                                       BehindImage="/pic/exit.png"
                                       FrontImage="/pic/exitMouseover.png"
                                       MouseLeftButtonDown="exit_MouseLeftButtonDown">
                    </Close:CloseButton>

                    <Close:CloseButton x:Name="minimize" HorizontalAlignment="Left" Margin="0"
                                 Height="28" Width="28" Cursor="Hand"
                                       ToolTip="隐藏窗口，隐藏后可以在任务栏处双击显示" BorderBrush="{x:Null}"
                                       Foreground="Black"
                                       FrontImage="/pic/minimizeMouseover.png"
                                       BehindImage="/pic/minimize.png" MouseLeftButtonDown="minimize_MouseLeftButtonDown">
                    </Close:CloseButton>
                </StackPanel>
                <!--标题行内容-->

                <Grid Grid.Row="1">
                    <TextBlock x:Name="time" Text="空闲中" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="38"/>
                </Grid>
                <!--操作行内容-->
                <Grid Grid.Row="2">
                    <StackPanel Orientation="Horizontal">
                        <Close:CloseButton x:Name="AddThing" Height="20" Width="20" BorderBrush="Transparent" Cursor="Hand" ToolTip="添加一个待办，加油！" Margin="5,0,5,0"
                                           BehindImage="/pic/add.png"
                                           FrontImage="/pic/addMouseover.png" MouseLeftButtonDown="AddThing_MouseLeftButtonDown">
                        </Close:CloseButton>
                        <My:MyButton x:Name="StartAndStop" Height="20" Width="20" BorderBrush="Transparent"
                                     MouseLeftButtonDown="StartAndStop_MouseLeftButtonDown" Cursor="Hand"
                                     ToolTip="开始计时" Margin="5,0,5,0"
                                     BehindStopImage="/pic/stop.png"
                                     BehindStartImage="/pic/start.png"
                                     FrontStopImage="/pic/stopMouseover.png"
                                     FrontStartImage="/pic/startMouseover.png">
                        </My:MyButton>
                        <Close:CloseButton x:Name="restart" Height="20" Width="20" BorderBrush="Transparent" Cursor="Hand" ToolTip="在选择了任务之后开始计时吧！" Margin="5,0,5,0" MouseLeftButtonDown="restart_MouseLeftButtonDown"
                                           BehindImage="/pic/restart.png"
                                           FrontImage="/pic/restartMouseover.png">
                        </Close:CloseButton>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <Close:CloseButton x:Name="Setting" HorizontalAlignment="Right" Height="20" Width="20" Margin="2" BorderBrush="{x:Null}" Cursor="Hand"
                                       BehindImage="/pic/setting.png"
                                       FrontImage="/pic/settingMouseover.png" MouseLeftButtonDown="Setting_MouseLeftButtonDown">
                    </Close:CloseButton>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
